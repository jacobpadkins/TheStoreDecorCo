color9 = #605F5B

// centered navbar
@media (min-width: 768px) {
    .navbar-centered .navbar-nav {
        float: none;
        text-align: center;
    }
    .navbar-centered .navbar-nav > li {
        float: none;
    }
    .navbar-centered .nav > li {
        display: inline;
    }
    .navbar-centered .nav > li > a {
        display: inline-block;
    }
}

body {
  background: color9
}

#top {
  background: white
}

#wrapper {
  position: relative
  height: 100%
}

#colCapa,
#colServ,
#colProd {
  height: 350px

  img {
    background: black
    margin-top: 10px
    height: 100%
    width: 100%
    border: 2px solid color5
    border-radius: 10pt
    position: relative
  }

  img:hover {
  }
}

#colCapa,
#colProd {
  margin-top: -10px
}

#slide {
  margin-top: 55px
  margin-bottom: 5px
  // uncomment for production
  //background-image: url("/../assets/images/slide1.jpg")
  background-image: url("../../../assets/images/slide1.jpg")
  background-size: cover
  height: 500px
}

#tagline {
  font-size: 40px
  font-style: italic
  font-weight: bolder
  color: color4
  text-shadow: 2px 2px color3
  margin-left: auto
  margin-right: auto
  right: 0
  left: 0
  margin-top: -60px
  background: rgba(0,0,0,0.5)
  position: absolute
}

#logo {
  position: absolute
  margin-left: -12px
  margin-top: 67px
}

#logo:hover {
  cursor: pointer
}

.circle {
  margin-left: auto
  margin-right: auto
  right: 0
  left: 0
  margin-top: -60px
	border-radius: 10%
	width: 160px
	height: 170px
  position: absolute
}

.navbar-custom {
  height: 50px
  border-style: none
  background-color: color9
  font-family: 'Montserrat', sans-serif;
}

.bottom-column
{
    float: none
    display: table-cell
    vertical-align: bottom
}

#bottom {
  bottom: 0
  color: color4
  background-color: color5
  height: 300px
}

.hundredPercent {
  width: 100%
  height: 100%
}

.wBorder {
  margin-top: 6px
  border: 2px solid
  border-color: color4
  border-radius: 20pt
  font-family: 'Montserrat', sans-serif;

  h3 {
    color: color4
  }

  textarea {
    height: 215px
    width: 95%
    margin-left: 2.5%
    margin-bottom: 3%
    background-color: color4
    border: none
  }
}

#copyText {
  font-family: 'Montserrat', sans-serif;
  color: black
  font-weight: 400
  font-size: 40px
  margin-top: 5px
  height: 400px
  background: color4
  overflow: hidden

  p#topP {
    margin-top: 70px
  }
}

li.active h3 {
  color: color4
  font-family: 'Montserrat', sans-serif
  padding: 3px
  margin-left: 15px
  margin-right: 15px
  margin-top: 10px
  font-size: 18px
  font-weight: 700
}

li.active h3:hover {
  cursor: pointer
  padding-top: 7px
}

.leftBar {
  margin-left: 40px
}

.rightBar {
  margin-right: 40px
}

span#smallFont {
  p {
    font-size: 24px
    color: color9
  }
}

#middle {
  height: 450px
  background-color: color4
  margin-bottom: 5px
  overflow: hidden;

  .col-md-10 {
    background-color: color4
    height: 400px
    margin-top: 25px
  }
}

#rowCapa,
#rowServ,
#rowProd {
  height: 125px
  margin-left: -7px
}

#rowCapa {
  margin-top: 7px
}

#rowServ {
  margin-top: 5px
}

#rowProd {
  margin-top: 5px
}

#rowCapa:hover,
#rowServ:hover,
#rowProd:hover {
  cursor: pointer
}

#divider {
