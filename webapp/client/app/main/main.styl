html,
body
  height: 100%
  min-height: 100%

.row

  hr
    border: 2.5px solid
    border-color: black
    margin-top: 14em

  #logo
    border: 5px solid
    height: 10em
    width: 20em
    margin: 2em
    margin-left: 5%
    text-align: center

    h1
      font-size: 64px

.col-md-4
  height: 100%
  min-height: 100%

.option
  border: 5px solid
  height: 15em
  width: 20em
  margin: 2em
  text-align: center
  position: relative

.topOption
  border: 5px solid
  height: 10em
  width: 20em
  margin: 2em
  margin-left: 5%
  text-align: center

.up
  margin-top: -14em
  margin-right: 5em

h1, h2
  cursor: default

h2
  margin-top: 2.5em
