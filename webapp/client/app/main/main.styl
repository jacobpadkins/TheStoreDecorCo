//color variables
color1 = #152F40
color2 = #0A4A59
color3 = #06828C
color4 = #D1F2E9
color5 = #F23D08

// centered navbar
@media (min-width: 768px) {
    .navbar-centered .navbar-nav {
        float: none;
        text-align: center;
    }
    .navbar-centered .navbar-nav > li {
        float: none;
    }
    .navbar-centered .nav > li {
        display: inline;
    }
    .navbar-centered .nav > li > a {
        display: inline-block;
    }
}

body {
  background: color3
}

#wrapper {
  position: relative
}

#colCapa,
#colServ,
#colProd {
  height: 350px

  img {
    background: black
    margin-top: 10px
    height: 100%
    width: 100%
    border: 2px solid color5
    border-radius: 10pt
    position: relative
  }
}

#colCapa,
#colProd {
  margin-top: -10px
}

#slide {
  background-image: url("../../../assets/images/slide1.jpg")
  background-size: cover
  height: 500px
}

#tagline {
  font-size: 40px
  font-style: italic
  color: white
  text-shadow: 2px 2px #1352A5
  margin-left: auto
  margin-right: auto
  right: 0
  left: 0
  margin-top: -60px
  background: rgba(0,0,0,0.5)
  position: absolute
}

#logo {
  background-color: color4
  border: 2px solid color3
  position: absolute
  padding: 7px
  margin-left: 17px
  margin-top: 70px
}

#logo:hover {
  cursor: pointer
  background-color: color5
}

.circle {
  margin-left: auto
  margin-right: auto
  right: 0
  left: 0
  margin-top: -70px
	border-radius: 10%
	width: 170px
	height: 170px
	background-color: color2
  position: absolute
}

.navbar-custom {
  border-style: none
  background-color: color2
}

.bottom-column
{
    float: none
    display: table-cell
    vertical-align: bottom
}

#bottom {
  color: white
  margin-top: 90px
  background-color: color2
  height: 300px
}

#middle {
  margin-top: 10px
}

.hundredPercent {
  width: 100%
  height: 100%
}

.wBorder {
  margin-top: 6px
  border: 2px solid
  border-color: white
  border-radius: 20pt

  textarea {
    height: 215px
    width: 95%
    margin-left: 2.5%
    margin-bottom: 3%
  }
}

.blueShadows {
  font-size: 32px
  color: white
  text-shadow: 2px 2px black
  background-color: color5
  //background: rgba(0,0,0,0.5)
  border-radius: 10px
}

.blueShadows:hover {
  cursor: pointer
  opacity: 0.5
}

#copyText {
  font-family: 'Oswald', sans-serif;
  font-weight: bold
  font-size: 20px
  margin-right: 10%
  margin-left: 10%
  margin-top: 10px
  border: 2px solid
  padding: 10px
  border-radius: 10px
  background: color4
}

li.active h3 {
  color: color4
  padding: 3px
  margin-left: 3px
  margin-right: 3px
  border-radius: 10pt
  margin-top: 5px
  font-size: 20px;
  border: 2px solid
  font-weight: bolder
}

li.active h3:hover {
  color: color1
  background-color: color4
  cursor: pointer
}
