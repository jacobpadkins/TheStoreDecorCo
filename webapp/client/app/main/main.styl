html,
body
  height: 100%
  min-height: 100%

.row

  hr
    border: 2.5px solid
    border-color: black
    margin-top: 14em

  #logo
    border: 5px solid
    height: 10em
    width: 20em
    margin: 2em
    margin-left: 1.7%
    text-align: center
    cursor: pointer

    h1
      font-size: 64px
      cursor: pointer

.col-md-4
  height: 100%
  min-height: 100%

.option
  border: 5px solid
  height: 15em
  width: 20em
  //margin: 2em
  text-align: center
  position: relative

.option:hover,
.topOption:hover,
.menu:hover
  background-color: blue
  cursor: pointer
  color: white

  h1, h2
    cursor: pointer

.topOption
  border: 5px solid
  height: 10em
  width: 20em
  margin: 2em
  margin-left: 0
  text-align: center

#up
  margin-top: -14em
  margin-right: -17em

h1, h2
  cursor: default

h2
  margin-top: 2.5em

#leftList,
#rightList
  border: 4px solid
  padding: 5px
  height: 53em
  overflow: auto
  //background-color: red

#leftList .menu
  border: 2px solid
  padding: 10px
  //background-color: white

#leftList .menu:hover
  background-color: blue

.pics
  border: 2px solid
  padding: 10px
  height: 20em
  //background-color: white

.pics:hover
  border-color: blue
  border-width: 10px

#leftArrow,
#rightArrow
  position: relative

  h1
    position: absolute
    display: inline-block
    cursor: pointer

#rightArrow h1
  right: 0

#wrapper
  margin-left: -1em

.col-md-6
  overflow: hidden
