    div.row.clearfix#rowCapa
      div.col-md-2
      div.col-md-4.column#colCapa
        h3.blueShadows.text-center Capabilities
        img.img-rounded(alt="capa. image" src="../../../assets/images/home1.jpg")
      div.col-md-6
    div.row.clearfix#rowServ
      div.col-md-6
      div.col-md-4.column#colServ
        h3.blueShadows.text-center Services
        img.img-rounded(alt="serv. image" src="../../../assets/images/home2.jpg")
      div.col-md-2
    div.row.clearfix#rowProd
      div.col-md-2
      div.col-md-4.column#colProd
        h3.blueShadows.text-center Products
        img.img-rounded(alt="prod. image" src="../../../assets/images/home3.jpg")
      div.col-md-6
  div.row.clearfix#bottom
        div.col-md-4
        div.col-md-4#quote
          div.wBorder.hundredPercent
            h3.text-center Request A Quote
            textarea.hundredPercent 
        div.col-md-4
        
