html,
.ng-scope
  height: 100%

.row
  height: 100%
  color: white
  font-size: 24px
  font-weight: bold
  text-shadow: -3px 0 black, 0 1px black, 3px 0 black, 0 -3px black

  p
    margin-top: -15pt
    margin-bottom: -15pt

  div
    height: 100%
    min-height: 100%
    text-align: center

  div:nth-of-type(1)
    background-color: #07123A
  div:nth-of-type(2)
    background-color: #172557
  div:nth-of-type(3)
    background-color: #303E73

#image
  background-color: black
  height: 40%
  width: 50%
  min-height: 40%
